{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["electron/mcp/**/*.ts", "electron/database/**/*.ts", "electron/services/**/*.ts", "electron/config/**/*.ts"],
  "exclude": ["node_modules", "electron/main.ts", "electron/preload.ts", "electron/graph/**"]
}
