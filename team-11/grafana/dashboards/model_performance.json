{
  "dashboard": {
    "title": "Credit Model - Performance Metrics",
    "tags": ["credit", "model", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Model Accuracy",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "model_accuracy",
            "refId": "A",
            "legendFormat": "Accuracy"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.8, "color": "green"}
              ]
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 2,
        "title": "Cross-Validation Score",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "model_cv_score_mean",
            "refId": "A",
            "legendFormat": "Mean CV Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.75, "color": "yellow"},
                {"value": 0.85, "color": "green"}
              ]
            },
            "unit": "percentunit"
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "title": "CV Score Std Dev",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "model_cv_score_std",
            "refId": "A",
            "legendFormat": "CV Std Dev"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.02, "color": "yellow"},
                {"value": 0.05, "color": "red"}
              ]
            },
            "unit": "percentunit"
          }
        },
        "options": {
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "title": "Prediction Rate (per minute)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(predictions_total[1m])",
            "refId": "A",
            "legendFormat": "{{outcome}} - {{group}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "logBase": 1},
          {"format": "short", "logBase": 1}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true
        }
      },
      {
        "id": 5,
        "title": "Prediction Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(prediction_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(prediction_latency_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(prediction_latency_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {"format": "s", "logBase": 1},
          {"format": "short", "logBase": 1}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["B", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Latency Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Prediction Errors (Rate)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(prediction_errors_total[5m])",
            "refId": "A",
            "legendFormat": "{{error_type}}"
          }
        ],
        "yaxes": [
          {"format": "ops", "logBase": 1},
          {"format": "short", "logBase": 1}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.01], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "Total Predictions by Group",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "sum by (group) (predictions_total)",
            "refId": "A",
            "legendFormat": "{{group}}"
          }
        ],
        "options": {
          "pieType": "pie",
          "displayLabels": ["name", "percent"],
          "legend": {
            "show": true,
            "position": "right"
          }
        }
      },
      {
        "id": 8,
        "title": "Predictions by Outcome",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "sum by (outcome) (predictions_total)",
            "refId": "A",
            "legendFormat": "{{outcome}}"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "value"],
          "legend": {
            "show": true,
            "position": "bottom"
          }
        }
      }
    ]
  }
}
